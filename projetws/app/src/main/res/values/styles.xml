<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#4169E1</item>
        <item name="colorPrimaryVariant">#3A5FCD</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#D3D3D3</item>
        <item name="colorOnSecondary">@android:color/black</item>
    </style>

    <!-- Text style -->
    <style name="text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Input style -->
    <style name="input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="boxStrokeColor">#4169E1</item>
        <item name="hintTextColor">#4169E1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Spinner style -->
    <style name="spinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="boxStrokeColor">#4169E1</item>
    </style>

    <!-- RadioGroup style -->
    <style name="radioGroup">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Button style -->
    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#4169E1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Date Picker Button style -->
    <style name="datePickerButton" parent="button">
        <item name="backgroundTint">#D3D3D3</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
